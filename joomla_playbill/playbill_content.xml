<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_PLAYBILL</name>
    <author>Playbill System</author>
    <creationDate>2025-01-07</creationDate>
    <copyright>Copyright (C) 2025</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>admin@example.com</authorEmail>
    <authorUrl>https://www.broadwayandmain.com</authorUrl>
    <version>1.0.0</version>
    <description>PLG_CONTENT_PLAYBILL_XML_DESCRIPTION</description>
    
    <files>
        <filename plugin="playbill">playbill_content.php</filename>
    </files>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="api_base_url"
                    type="text"
                    label="API Base URL"
                    description="Base URL for the Playbill API (e.g., https://www.broadwayandmain.com/playbill_app/api/joomla)"
                    default="https://www.broadwayandmain.com/playbill_app/api/joomla"
                    size="60"
                />
                <field
                    name="public_base_url"
                    type="text"
                    label="Public Base URL"
                    description="Base URL for public profile pages (e.g., https://www.broadwayandmain.com/playbill_app/public)"
                    default="https://www.broadwayandmain.com/playbill_app/public"
                    size="60"
                />
            </fieldset>
        </fields>
    </config>
    
    <languages>
        <language tag="en-GB">en-GB.plg_content_playbill.ini</language>
    </languages>
</extension>

